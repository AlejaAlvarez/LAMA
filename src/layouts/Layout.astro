---
import Header from "../components/Header";
import Head from "../components/Head";
import Footer from "../components/Footer";
import "../styles/global.css";

const { title, frontmatter } = Astro.props;
const pageTitle = title ?? frontmatter?.title;
---

<!doctype html>
<html lang="en">
	<head>
		<Head 
			title={pageTitle}
			description="Tu descripción personalizada aquí"
		/>
	</head>

	<body class="flex flex-col min-h-screen" title="">
		<Header title="" />
		<main class="flex-grow conteiner mx-auto p-8">
			<slot />
		</main>
		<Footer title="" />
	</body>
</html>
